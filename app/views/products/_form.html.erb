<div class="cadastrar-produto">
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nome %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Descrição %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :Preço %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :Categoria %><br />
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :Marca %><br />
    <%= f.collection_select :mark_id, @marks, :id, :name %>
  </div>
  <div class="field">
    <%= f.label "Imagem do produto" %><br />
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
